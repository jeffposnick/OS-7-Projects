inner;				end;			end;		until (choice = 'N') or (yourTotal > 21);		if not tf then begin			writeln('The computer has: ', compTotal);			while compTotal < 16 do begin				curCard := curCard + 1;				compTotal := compTotal + deck[curCard];				writeln('The computer has: ', compTotal);			end;			Winner;		end;	end;end.